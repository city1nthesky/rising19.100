{

  "description": "RISING FireFox blocker",
  "manifest_version": 2,
  "name": "RS-FF-BLOCKER",
    "version": "1.0",
    "icons": {
    "48": "pen.svg"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  },
  "web_accessible_resources": [
    "deny.html",
    "deny.js"
  ]

}
